<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .root {
            width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .label {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
    
    	<b:ResponsiveNavbar position="TOP" scrollspy="false" inverse="true">
				<b:Brand>The BrewTour Project</b:Brand>
				<b:Nav>
			        <b:NavLink icon="BEER" href="#beer">Beer</b:NavLink>
			        <b:NavLink icon="BEAKER" href="#brewery">Brewery</b:NavLink>
			        <b:NavLink icon="GLOBE" href="#location">Location</b:NavLink>
			        <b:NavLink icon="TAG" href="#style">Style</b:NavLink>
    			</b:Nav>
				<b:NavSearch size="3" placeholder="Search" />
		</b:ResponsiveNavbar> 
    
        <h1>Remote Procedure Call</h1>
        
        <div class="{style.label}">Sending name to server:</div>
        <g:HTML ui:field="textToServer"/>  
        
        <div class="{style.label}">Server replies:</div>
        <g:HTML ui:field="serverResponse"/>

        <b:Button type="PRIMARY" ui:field="closeButton">Close</b:Button> 
    
    </g:HTMLPanel>
</ui:UiBinder> 
