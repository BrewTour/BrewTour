<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
				xmlns:g="urn:import:com.google.gwt.user.client.ui" 
				xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
				xmlns:btui="urn:import:za.co.brewtour.client.application.ui">
    <ui:style>
        .root {
	        width: 800px;
	        margin-left: auto;
	        margin-right: auto;
        }

        .gwtp {
        	margin-bottom: 15px;
        }

        .border {
			border-bottom: 1px solid #eeeeee;
		}
		
        .label {
        	font-weight: bold;
		}
	
        .label-error {
			color: red;
		}
        
        .{style.browser} {
        }
	</ui:style>
    
    <g:HTMLPanel ui:field="container" styleName="{style.root}">
		
		
			<!-- TODO: Move to header UI element -->
			<b:ResponsiveNavbar position="TOP" scrollspy="false" inverse="true">
				<b:Brand ui:field="brandElement">The BrewTour Project</b:Brand>
				<b:Nav>
			        <b:NavLink icon="BEER" ui:field="beerNavLink">Beer</b:NavLink>
			        <b:NavLink icon="BEAKER" href="#!TODO">Brewery</b:NavLink>
			        <b:NavLink icon="GLOBE" href="#!TODO">Location</b:NavLink>
			        <b:NavLink icon="TAG" href="#!TODO">Style</b:NavLink>
			       
    			</b:Nav>
				<b:NavSearch size="3" placeholder="Search" />
			</b:ResponsiveNavbar> 
			
			
			<g:HorizontalPanel height="66px" width="620px" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">			
	        <g:HTMLPanel>
	        <h1>Welcome to Brew Tour!</h1>

	        <div class="{style.label}">Please enter your name:</div>
        
	        <b:TextBox placeholder="Type somethingâ€¦" ui:field="nameField"/>
	        <g:HTML ui:field="error" styleName="{style.label-error}"/>
	        <b:Button type="PRIMARY" ui:field="sendButton">Send</b:Button>
	        </g:HTMLPanel>
	        </g:HorizontalPanel>
	        	        		
		
    </g:HTMLPanel>
</ui:UiBinder>
