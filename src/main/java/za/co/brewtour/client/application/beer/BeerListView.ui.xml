<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .root {
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }
        
        .label {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">    
        <h1>Awesome List of Delicious Beer</h1>
        
        <div class="{style.label}">Status:</div>
        <g:HTML ui:field="serverResponse"/>
		<g:VerticalPanel ui:field="verticalPanel"/>
        <b:Button type="PRIMARY" ui:field="closeButton">Close</b:Button> 
    
    </g:HTMLPanel>
</ui:UiBinder> 
