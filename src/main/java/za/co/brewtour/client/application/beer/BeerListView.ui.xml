<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:style>
        .root {
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }
        
        .label {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
    
    	<!-- TODO: Move to header UI element -->
			<b:ResponsiveNavbar position="TOP" scrollspy="false" inverse="true">
				<b:Brand ui:field="brandElement">The BrewTour Project</b:Brand>
				<b:Nav>
			        <b:NavLink icon="BEER" ui:field="beerNavLink">Beer</b:NavLink>
			        <b:NavLink icon="BEAKER" href="#!TODO">Brewery</b:NavLink>
			        <b:NavLink icon="GLOBE" href="#!TODO">Location</b:NavLink>
			        <b:NavLink icon="TAG" href="#!TODO">Style</b:NavLink>
			       
    			</b:Nav>
				<b:NavSearch size="3" placeholder="Search" />
			</b:ResponsiveNavbar>  
    
        <h1>Awesome List of Delicious Beer</h1>
        
        <div class="{style.label}">Status:</div>
        <g:HTML ui:field="serverResponse"/>
		<g:VerticalPanel ui:field="verticalPanel"/>
        <b:Button type="PRIMARY" ui:field="closeButton">Close</b:Button> 
    
    </g:HTMLPanel>
</ui:UiBinder> 
